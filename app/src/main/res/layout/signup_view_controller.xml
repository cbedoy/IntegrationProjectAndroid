<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_marginLeft="-96dp"
        android:layout_marginRight="-96dp"
        android:src="@drawable/wallpaper_blur"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000"/>







    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/mSignUpActionFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_action_confirm"
        android:layout_margin="18dp"
        fab:fab_colorNormal="#293a4a"
        fab:fab_colorPressed="#293a6a"
        fab:fab_colorRipple="#293a9a"
        android:layout_below="@+id/mConfirmPassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/mUsername"
        android:hint="username"
        android:textColorHint="#33FFFFFF"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/mFirstName"
        android:layout_alignStart="@+id/mFirstName"
        android:layout_alignRight="@+id/mFirstName"
        android:layout_alignEnd="@+id/mFirstName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:inputType="textPersonName"
        android:hint="first name"
        android:textColorHint="#33FFFFFF"
        android:ems="10"
        android:id="@+id/mFirstName"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_below="@+id/mUsername"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:inputType="textPersonName"
        android:hint="last name"
        android:textColorHint="#33FFFFFF"
        android:ems="10"
        android:id="@+id/mLastName"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_below="@+id/mFirstName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="password"
        android:layout_marginRight="18dp"
        android:textColorHint="#33FFFFFF"
        android:id="@+id/mPassword"
        android:layout_below="@+id/mLastName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/mLastName"
        android:layout_alignStart="@+id/mLastName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:hint="confirm password"
        android:textColorHint="#33FFFFFF"
        android:id="@+id/mConfirmPassword"
        android:layout_below="@+id/mPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="96dp"
        android:layout_height="144dp"
        android:id="@+id/imageView"
        android:src="@drawable/ic_logo"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:text="Integration Project"
        android:textSize="18sp"
        android:textColor="#FAFAFA"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>